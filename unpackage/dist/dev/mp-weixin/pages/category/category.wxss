.categoryContainer .header {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.categoryContainer .header .search {
  width: 90%;
  height: 60rpx;
  background: #aaa;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}
.categoryContainer .main {
  display: flex;
  border-top: 1px solid #aaa;
  box-sizing: border-box;
}
.categoryContainer .main .left {
  width: 150rpx;
}
.categoryContainer .main .left .leftItem {
  height: 80rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
}
.categoryContainer .main .left .leftItem.active {
  border-bottom: 1px solid #00f;
  background-color: #ffc0cb;
}
.categoryContainer .main .rightScroll {
  height: calc(100vh -80rpx);
  flex: 1;
  border-left: 1px solid #aaa;
  box-sizing: border-box;
}
.categoryContainer .main .rightScroll .scrollItem .itemImg {
  display: block;
  width: 520rpx;
  height: 190rpx;
  margin: 20rpx auto;
}
.categoryContainer .main .rightScroll .scrollItem .goodsList {
  display: flex;
  flex-wrap: wrap;
  margin: 0rpx 40rpx;
}
.categoryContainer .main .rightScroll .scrollItem .goodsList .goods {
  width: 33.3333%;
  text-align: center;
}
.categoryContainer .main .rightScroll .scrollItem .goodsList .goods .goodsImg {
  width: 100%;
  height: 144rpx;
}
.categoryContainer .main .rightScroll .scrollItem .goodsList .goods .goodsText {
  font-size: 28rpx;
}

